{
   "controller": {
   },
   "workers": [
      {
         "type": "router",
         "realms": [
            {
               "name": "realm1",
               "roles": [
                  {
                     "name": "anonymous",
                     "permissions": [
                        {
                           "uri": "*",
                           "publish": true,
                           "subscribe": true,
                           "call": true,
                           "register": true
                        }
                     ]
                  }
               ]
            }, {
               "name": "realm2",
               "roles": [
                  {
                     "name": "anonymous",
                     "permissions": [
                        {
                           "uri": "*",
                           "publish": true,
                           "subscribe": true,
                           "call": true,
                           "register": true
                        }
                     ]
                  }
               ]
            }
         ],
         "transports": [
            {
               "type": "web",
               "endpoint": {
                  "type": "tcp",
                  "port": 9000
               },
               "paths": {
                  "/": {
                     "type": "static",
                     "directory": "../"
                  },
                  "ws": {
                     "type": "websocket"
                  }
               }
            }
         ]
      },
      {
         "type": "guest",
         "executable": "./node_modules/.bin/istanbul",
         "arguments": ["cover", "--handle-sigint", "--dir", "coverage-node", "test/node.js"],
         "options": {
            "workdir": "../",
            "watch": {
               "directories": ["../"],
               "action": "restart"
            }
         }
      }
   ]
}
